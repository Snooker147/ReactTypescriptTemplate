{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types",
            "./custom_typings"
        ],
        "moduleResolution": "node",
        "outDir": "./dist/build",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "lib": ["es6", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": [ "custom_typings/*" ],
            "@internals/*": [ "src-internals/*" ]
        }
    },
    "include": [
        "./custom_typings/**/*",
        "./src/**/*",
        "./src-internals/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}